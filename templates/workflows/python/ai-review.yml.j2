# {{ project_name }} AI Code Review Pipeline
# Generated by SuperClaude /sc:cicd-setup
# Uses Claude Code Action for AI-powered PR review
# NON-BLOCKING: Advisory comments only, does not prevent merge

name: AI Code Review

on:
  pull_request:
    types: [opened, synchronize, reopened]

# Note: This workflow is intentionally non-blocking
# It provides AI-powered feedback but does not gate merges

jobs:
  ai-review:
    name: AI Code Review
    runs-on: ubuntu-latest
    # Skip for dependabot PRs to avoid API costs
    if: github.actor != 'dependabot[bot]'

    permissions:
      contents: read
      pull-requests: write
      issues: read
      id-token: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2
        with:
          fetch-depth: 0

      - name: Get PR context
        id: context
        run: |
          # Get changed files count
          FILES_CHANGED=$(git diff --name-only origin/{% raw %}${{ github.base_ref }}{% endraw %}...HEAD | wc -l)
          echo "files_changed=$FILES_CHANGED" >> $GITHUB_OUTPUT

          # Get diff statistics
          DIFF_STATS=$(git diff --stat origin/{% raw %}${{ github.base_ref }}{% endraw %}...HEAD | tail -1)
          echo "diff_stats=$DIFF_STATS" >> $GITHUB_OUTPUT

          # Get list of changed Python files
          PYTHON_FILES=$(git diff --name-only origin/{% raw %}${{ github.base_ref }}{% endraw %}...HEAD | grep '\.py$' | head -20 | tr '\n' ',' | sed 's/,$//')
          echo "python_files=$PYTHON_FILES" >> $GITHUB_OUTPUT

      - name: Run AI Code Review
        uses: anthropics/claude-code-action@v1
        with:
          github_token: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
          anthropic_api_key: {% raw %}${{ secrets.ANTHROPIC_API_KEY }}{% endraw %}
          timeout_minutes: 15
          prompt: |
            # {{ project_name }} PR Code Review

            **Repository**: {% raw %}${{ github.repository }}{% endraw %}
            **PR Number**: {% raw %}${{ github.event.pull_request.number }}{% endraw %}
            **PR Title**: {% raw %}${{ github.event.pull_request.title }}{% endraw %}
            **Files Changed**: {% raw %}${{ steps.context.outputs.files_changed }}{% endraw %}
            **Diff Stats**: {% raw %}${{ steps.context.outputs.diff_stats }}{% endraw %}

            ## Instructions

            Review this pull request focusing on:
            1. Code quality and best practices
            2. Security vulnerabilities
            3. Performance concerns
            4. Test coverage

            ### Step 1: Get the PR diff
            Use `gh pr diff {% raw %}${{ github.event.pull_request.number }}{% endraw %}` to examine the changes.

            ### Step 2: Analyze the changes
            Review the code changes systematically, looking for:
            - Bugs or logic errors
            - Security issues
            - Performance problems
            - Missing tests
            - Code style issues

            ### Step 3: Post Results
            Post a comment using `gh pr comment` with this format:

            ```markdown
            ## AI Code Review

            ### Overview
            [Brief summary of changes reviewed]

            ### Issues Found
            [Any issues by severity: critical, high, medium, low]

            ### Positive Observations
            [Good patterns and practices observed]

            ### Suggestions
            [Optional improvements]

            ---
            *This review was generated by Claude AI.*
            *Review is advisory - please use human judgment for final decisions.*
            ```

          claude_args: >-
            --allowed-tools
            "Bash(gh pr comment:*),Bash(gh pr diff:*),Bash(gh pr view:*),Read,Grep,Glob"

      - name: Review complete
        if: always()
        run: |
          echo "## AI Code Review Status" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "AI code review has been posted to the PR." >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Note**: This review is advisory only and does not block merging." >> $GITHUB_STEP_SUMMARY
