# {{ project_name }} Security Scanning Pipeline
# Generated by SuperClaude /sc:cicd-setup
# CodeQL analysis + dependency auditing

name: Security

on:
  push:
    branches: [{{ main_branch }}]
  pull_request:
    branches: [{{ main_branch }}]
  schedule:
    # Weekly security scan - Mondays at midnight UTC
    - cron: '0 0 * * 1'
  workflow_dispatch:

permissions:
  contents: read
  security-events: write
  actions: read

jobs:
  # ============================================
  # CodeQL - Static Application Security Testing
  # ============================================
  codeql:
    name: CodeQL Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Initialize CodeQL
        uses: github/codeql-action/init@v3.27.5
        with:
          languages: python
          queries: +security-extended,security-and-quality

      - name: Autobuild
        uses: github/codeql-action/autobuild@v3.27.5

      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3.27.5
        with:
          category: "/language:python"

  # ============================================
  # Dependency Audit - Check for vulnerable packages
  # ============================================
  pip-audit:
    name: Dependency Audit
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Set up Python
        uses: actions/setup-python@v5.3.0
        with:
          python-version: '{{ python_versions[-1] }}'
          cache: 'pip'

      - name: Install pip-audit
        run: pip install pip-audit

      - name: Install project dependencies
        run: pip install ".[dev]"

      - name: Run pip-audit
        run: |
          pip-audit --desc on --format markdown --output audit-report.md || true
          cat audit-report.md >> $GITHUB_STEP_SUMMARY

      - name: Upload audit report
        uses: actions/upload-artifact@v4.4.3
        with:
          name: pip-audit-report
          path: audit-report.md
          retention-days: 30

  # ============================================
  # Bandit - Python Security Linter
  # ============================================
  bandit:
    name: Bandit Security Scan
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Set up Python
        uses: actions/setup-python@v5.3.0
        with:
          python-version: '{{ python_versions[-1] }}'

      - name: Install Bandit
        run: pip install bandit[toml]

      - name: Run Bandit
        run: |
          bandit -r {{ source_dir }}/ -f json -o bandit-report.json || true
          bandit -r {{ source_dir }}/ -f txt || true

      - name: Upload Bandit report
        uses: actions/upload-artifact@v4.4.3
        with:
          name: bandit-report
          path: bandit-report.json
          retention-days: 30

  # ============================================
  # Security Summary
  # ============================================
  security-summary:
    name: Security Summary
    if: always()
    needs: [codeql, pip-audit, bandit]
    runs-on: ubuntu-latest
    steps:
      - name: Generate summary
        run: |
          echo "## Security Scan Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Scan | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| CodeQL | {% raw %}${{ needs.codeql.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| pip-audit | {% raw %}${{ needs.pip-audit.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| Bandit | {% raw %}${{ needs.bandit.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
