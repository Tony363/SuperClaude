# {{ project_name }} Security Scanning Pipeline
# Generated by SuperClaude /sc:cicd-setup
# npm audit + CodeQL analysis

name: Security

on:
  push:
    branches: [{{ main_branch }}]
  pull_request:
    branches: [{{ main_branch }}]
  schedule:
    # Weekly security scan - Mondays at midnight UTC
    - cron: '0 0 * * 1'
  workflow_dispatch:

permissions:
  contents: read
  security-events: write
  actions: read

jobs:
  # ============================================
  # CodeQL - Static Application Security Testing
  # ============================================
  codeql:
    name: CodeQL Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Initialize CodeQL
        uses: github/codeql-action/init@v3.27.5
        with:
          languages: javascript-typescript
          queries: +security-extended,security-and-quality

      - name: Autobuild
        uses: github/codeql-action/autobuild@v3.27.5

      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3.27.5
        with:
          category: "/language:javascript-typescript"

  # ============================================
  # npm Audit - Check for vulnerable packages
  # ============================================
  npm-audit:
    name: Dependency Audit
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Node.js
        uses: actions/setup-node@v4.1.0
        with:
          node-version: '{{ node_versions[-1] }}'
          cache: '{{ package_manager }}'

      - name: Install dependencies
        run: {{ package_manager }} {{ 'ci' if package_manager == 'npm' else 'install --frozen-lockfile' }}

      - name: Run npm audit
        run: |
{% if package_manager == 'npm' %}
          npm audit --audit-level=moderate || true
{% elif package_manager == 'yarn' %}
          yarn audit --level moderate || true
{% else %}
          pnpm audit --audit-level moderate || true
{% endif %}

      - name: Generate audit report
        run: |
{% if package_manager == 'npm' %}
          npm audit --json > audit-report.json || true
{% elif package_manager == 'yarn' %}
          yarn audit --json > audit-report.json || true
{% else %}
          pnpm audit --json > audit-report.json || true
{% endif %}

      - name: Upload audit report
        uses: actions/upload-artifact@v4.4.3
        with:
          name: audit-report
          path: audit-report.json
          retention-days: 30

  # ============================================
  # Security Summary
  # ============================================
  security-summary:
    name: Security Summary
    if: always()
    needs: [codeql, npm-audit]
    runs-on: ubuntu-latest
    steps:
      - name: Generate summary
        run: |
          echo "## Security Scan Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Scan | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| CodeQL | {% raw %}${{ needs.codeql.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| npm audit | {% raw %}${{ needs.npm-audit.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
