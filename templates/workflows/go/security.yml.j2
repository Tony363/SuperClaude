# {{ project_name }} Security Scanning Pipeline
# Generated by SuperClaude /sc:cicd-setup
# gosec + CodeQL analysis

name: Security

on:
  push:
    branches: [{{ main_branch }}]
  pull_request:
    branches: [{{ main_branch }}]
  schedule:
    - cron: '0 0 * * 1'
  workflow_dispatch:

permissions:
  contents: read
  security-events: write
  actions: read

jobs:
  # ============================================
  # CodeQL - Static Application Security Testing
  # ============================================
  codeql:
    name: CodeQL Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Initialize CodeQL
        uses: github/codeql-action/init@v3.27.5
        with:
          languages: go
          queries: +security-extended,security-and-quality

      - name: Autobuild
        uses: github/codeql-action/autobuild@v3.27.5

      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3.27.5
        with:
          category: "/language:go"

  # ============================================
  # gosec - Go Security Checker
  # ============================================
  gosec:
    name: gosec Security Scan
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Go
        uses: actions/setup-go@v5.1.0
        with:
          go-version: '{{ go_versions[-1] }}'
          cache: true

      - name: Run gosec
        uses: securego/gosec@v2.21.4
        with:
          args: '-fmt sarif -out gosec-results.sarif ./...'

      - name: Upload SARIF file
        uses: github/codeql-action/upload-sarif@v3.27.5
        with:
          sarif_file: gosec-results.sarif

  # ============================================
  # Dependency Audit
  # ============================================
  govulncheck:
    name: Vulnerability Check
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Go
        uses: actions/setup-go@v5.1.0
        with:
          go-version: '{{ go_versions[-1] }}'
          cache: true

      - name: Install govulncheck
        run: go install golang.org/x/vuln/cmd/govulncheck@latest

      - name: Run govulncheck
        run: govulncheck ./... || true

  # ============================================
  # Security Summary
  # ============================================
  security-summary:
    name: Security Summary
    if: always()
    needs: [codeql, gosec, govulncheck]
    runs-on: ubuntu-latest
    steps:
      - name: Generate summary
        run: |
          echo "## Security Scan Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Scan | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| CodeQL | {% raw %}${{ needs.codeql.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| gosec | {% raw %}${{ needs.gosec.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| govulncheck | {% raw %}${{ needs.govulncheck.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
