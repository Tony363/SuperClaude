# {{ project_name }} CI Pipeline
# Generated by SuperClaude /sc:cicd-setup
# Quality gates with matrix testing across Go {{ go_versions | join(', ') }}

name: CI

on:
  push:
    branches: [{{ main_branch }}, develop]
  pull_request:
    branches: ['**']

permissions:
  contents: read

jobs:
  # ============================================
  # Quality Gate - Lint and vet
  # ============================================
  quality:
    name: Quality Gate
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Go
        uses: actions/setup-go@v5.1.0
        with:
          go-version: '{{ go_versions[-1] }}'
          cache: true

      - name: Verify dependencies
        run: go mod verify

      - name: Run go vet
        run: go vet ./...

      - name: Run golangci-lint
        uses: golangci/golangci-lint-action@v6.1.1
        with:
          version: latest
          args: --timeout=5m

  # ============================================
  # Test Matrix - Go {{ go_versions | join(', ') }}
  # ============================================
  test:
    name: Test (Go {% raw %}${{ matrix.go-version }}{% endraw %})
    needs: quality
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        go-version: {{ go_versions | tojson }}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Go {% raw %}${{ matrix.go-version }}{% endraw %}
        uses: actions/setup-go@v5.1.0
        with:
          go-version: {% raw %}${{ matrix.go-version }}{% endraw %}
          cache: true

      - name: Run tests
        run: go test -v -race -coverprofile=coverage.out ./...

      - name: Upload coverage
        if: matrix.go-version == '{{ go_versions[-1] }}'
        uses: actions/upload-artifact@v4.4.3
        with:
          name: coverage
          path: coverage.out
          retention-days: 7
{% if codecov %}

      - name: Upload coverage to Codecov
        if: matrix.go-version == '{{ go_versions[-1] }}'
        uses: codecov/codecov-action@v5.1.2
        with:
          files: ./coverage.out
          fail_ci_if_error: false
        env:
          CODECOV_TOKEN: {% raw %}${{ secrets.CODECOV_TOKEN }}{% endraw %}
{% endif %}

  # ============================================
  # Build Verification
  # ============================================
  build:
    name: Build Check
    needs: quality
    runs-on: ubuntu-latest
    strategy:
      matrix:
        os: [linux, darwin, windows]
        arch: [amd64, arm64]
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Setup Go
        uses: actions/setup-go@v5.1.0
        with:
          go-version: '{{ go_versions[-1] }}'
          cache: true

      - name: Build
        env:
          GOOS: {% raw %}${{ matrix.os }}{% endraw %}
          GOARCH: {% raw %}${{ matrix.arch }}{% endraw %}
        run: |
          go build -v -o bin/{{ project_name | lower }}-{% raw %}${{ matrix.os }}{% endraw %}-{% raw %}${{ matrix.arch }}{% endraw %}{% raw %}${{ matrix.os == 'windows' && '.exe' || '' }}{% endraw %} ./...

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4.4.3
        with:
          name: {{ project_name | lower }}-{% raw %}${{ matrix.os }}{% endraw %}-{% raw %}${{ matrix.arch }}{% endraw %}
          path: bin/
          retention-days: 7

  # ============================================
  # CI Summary
  # ============================================
  ci-status:
    name: CI Status
    if: always()
    needs: [quality, test, build]
    runs-on: ubuntu-latest
    steps:
      - name: Check CI status
        run: |
          if [[ "{% raw %}${{ needs.quality.result }}{% endraw %}" == "failure" ]] || \
             [[ "{% raw %}${{ needs.test.result }}{% endraw %}" == "failure" ]] || \
             [[ "{% raw %}${{ needs.build.result }}{% endraw %}" == "failure" ]]; then
            echo "CI failed"
            exit 1
          fi
          echo "CI passed"
