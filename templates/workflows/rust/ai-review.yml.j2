# {{ project_name }} AI Code Review Pipeline
# Generated by SuperClaude /sc:cicd-setup

name: AI Code Review

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  ai-review:
    name: AI Code Review
    runs-on: ubuntu-latest
    if: github.actor != 'dependabot[bot]'

    permissions:
      contents: read
      pull-requests: write
      issues: read
      id-token: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2
        with:
          fetch-depth: 0

      - name: Get PR context
        id: context
        run: |
          FILES_CHANGED=$(git diff --name-only origin/{% raw %}${{ github.base_ref }}{% endraw %}...HEAD | wc -l)
          echo "files_changed=$FILES_CHANGED" >> $GITHUB_OUTPUT

          RUST_FILES=$(git diff --name-only origin/{% raw %}${{ github.base_ref }}{% endraw %}...HEAD | grep '\.rs$' | head -20 | tr '\n' ',' | sed 's/,$//')
          echo "rust_files=$RUST_FILES" >> $GITHUB_OUTPUT

      - name: Run AI Code Review
        uses: anthropics/claude-code-action@v1
        with:
          github_token: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
          anthropic_api_key: {% raw %}${{ secrets.ANTHROPIC_API_KEY }}{% endraw %}
          timeout_minutes: 15
          prompt: |
            # {{ project_name }} PR Code Review

            **Repository**: {% raw %}${{ github.repository }}{% endraw %}
            **PR Number**: {% raw %}${{ github.event.pull_request.number }}{% endraw %}
            **PR Title**: {% raw %}${{ github.event.pull_request.title }}{% endraw %}
            **Files Changed**: {% raw %}${{ steps.context.outputs.files_changed }}{% endraw %}

            Review this Rust pull request focusing on:
            1. Memory safety and ownership patterns
            2. Error handling with Result/Option
            3. Performance and zero-cost abstractions
            4. Idiomatic Rust patterns
            5. Unsafe code blocks (if any)
            6. Test coverage

            Use `gh pr diff {% raw %}${{ github.event.pull_request.number }}{% endraw %}` to examine changes.
            Post a review comment using `gh pr comment`.

          claude_args: >-
            --allowed-tools
            "Bash(gh pr comment:*),Bash(gh pr diff:*),Bash(gh pr view:*),Read,Grep,Glob"
