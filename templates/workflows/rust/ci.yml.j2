# {{ project_name }} CI Pipeline
# Generated by SuperClaude /sc:cicd-setup
# Quality gates with Rust {{ rust_channel }} toolchain

name: CI

on:
  push:
    branches: [{{ main_branch }}, develop]
  pull_request:
    branches: ['**']

permissions:
  contents: read

env:
  CARGO_TERM_COLOR: always

jobs:
  # ============================================
  # Quality Gate - Format and lint
  # ============================================
  quality:
    name: Quality Gate
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable
        with:
          toolchain: {{ rust_channel }}
          components: rustfmt, clippy

      - name: Check formatting
        run: cargo fmt --all -- --check

      - name: Run clippy
        run: cargo clippy --all-targets --all-features -- -D warnings

  # ============================================
  # Test Matrix
  # ============================================
  test:
    name: Test ({% raw %}${{ matrix.os }}{% endraw %})
    needs: quality
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable
        with:
          toolchain: {{ rust_channel }}

      - name: Run tests
        run: cargo test --all-features --verbose

  # ============================================
  # MSRV Check - Minimum Supported Rust Version
  # ============================================
{% if msrv %}
  msrv:
    name: MSRV ({{ msrv }})
    needs: quality
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable
        with:
          toolchain: '{{ msrv }}'

      - name: Check MSRV
        run: cargo check --all-features
{% endif %}

  # ============================================
  # Build Verification
  # ============================================
  build:
    name: Build ({% raw %}${{ matrix.target }}{% endraw %})
    needs: quality
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      matrix:
        include:
          - os: ubuntu-latest
            target: x86_64-unknown-linux-gnu
          - os: ubuntu-latest
            target: x86_64-unknown-linux-musl
          - os: macos-latest
            target: x86_64-apple-darwin
          - os: macos-latest
            target: aarch64-apple-darwin
          - os: windows-latest
            target: x86_64-pc-windows-msvc

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable
        with:
          toolchain: {{ rust_channel }}
          targets: {% raw %}${{ matrix.target }}{% endraw %}

      - name: Build
        run: cargo build --release --target {% raw %}${{ matrix.target }}{% endraw %}

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4.4.3
        with:
          name: {{ project_name | lower }}-{% raw %}${{ matrix.target }}{% endraw %}
          path: target/{% raw %}${{ matrix.target }}{% endraw %}/release/
          retention-days: 7

  # ============================================
  # CI Summary
  # ============================================
  ci-status:
    name: CI Status
    if: always()
    needs: [quality, test, build{% if msrv %}, msrv{% endif %}]
    runs-on: ubuntu-latest
    steps:
      - name: Check CI status
        run: |
          if [[ "{% raw %}${{ needs.quality.result }}{% endraw %}" == "failure" ]] || \
             [[ "{% raw %}${{ needs.test.result }}{% endraw %}" == "failure" ]] || \
             [[ "{% raw %}${{ needs.build.result }}{% endraw %}" == "failure" ]]{% if msrv %} || \
             [[ "{% raw %}${{ needs.msrv.result }}{% endraw %}" == "failure" ]]{% endif %}; then
            echo "CI failed"
            exit 1
          fi
          echo "CI passed"
