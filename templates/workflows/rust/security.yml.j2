# {{ project_name }} Security Scanning Pipeline
# Generated by SuperClaude /sc:cicd-setup
# cargo-audit + CodeQL analysis

name: Security

on:
  push:
    branches: [{{ main_branch }}]
  pull_request:
    branches: [{{ main_branch }}]
  schedule:
    - cron: '0 0 * * 1'
  workflow_dispatch:

permissions:
  contents: read
  security-events: write
  actions: read

env:
  CARGO_TERM_COLOR: always

jobs:
  # ============================================
  # cargo-audit - Dependency vulnerability check
  # ============================================
  cargo-audit:
    name: Cargo Audit
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install Rust toolchain
        uses: dtolnay/rust-toolchain@stable

      - name: Install cargo-audit
        run: cargo install cargo-audit

      - name: Run cargo-audit
        run: cargo audit || true

      - name: Generate audit report
        run: cargo audit --json > audit-report.json || true

      - name: Upload audit report
        uses: actions/upload-artifact@v4.4.3
        with:
          name: cargo-audit-report
          path: audit-report.json
          retention-days: 30

  # ============================================
  # cargo-deny - License and ban checks
  # ============================================
  cargo-deny:
    name: Cargo Deny
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4.2.2

      - name: Install cargo-deny
        uses: EmbarkStudios/cargo-deny-action@v2.0.3
        with:
          command: check bans licenses sources

  # ============================================
  # Security Summary
  # ============================================
  security-summary:
    name: Security Summary
    if: always()
    needs: [cargo-audit, cargo-deny]
    runs-on: ubuntu-latest
    steps:
      - name: Generate summary
        run: |
          echo "## Security Scan Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Scan | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| cargo-audit | {% raw %}${{ needs.cargo-audit.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
          echo "| cargo-deny | {% raw %}${{ needs.cargo-deny.result }}{% endraw %} |" >> $GITHUB_STEP_SUMMARY
