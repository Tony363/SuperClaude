{
  "version": "1.0.0",
  "description": "Agent trigger configuration for SuperClaude Framework",
  "components": {
    "agents": {
      "general-purpose": {
        "triggers": ["--delegate", "Task()", "help me", "assist"],
        "module": "SuperClaude.Agents.core.general_purpose",
        "class": "GeneralPurposeAgent",
        "priority": 1
      },
      "root-cause-analyst": {
        "triggers": ["debug", "investigate", "analyze issue", "find problem", "root cause"],
        "module": "SuperClaude.Agents.core.root_cause",
        "class": "RootCauseAnalyst",
        "priority": 2
      },
      "refactoring-expert": {
        "triggers": ["refactor", "improve code", "clean up", "optimize", "restructure"],
        "module": "SuperClaude.Agents.core.refactoring",
        "class": "RefactoringExpert",
        "priority": 2
      },
      "technical-writer": {
        "triggers": ["document", "write docs", "create readme", "explain", "describe"],
        "module": "SuperClaude.Agents.core.technical_writer",
        "class": "TechnicalWriter",
        "priority": 2
      },
      "performance-engineer": {
        "triggers": ["performance", "slow", "optimize speed", "bottleneck", "profile"],
        "module": "SuperClaude.Agents.core.performance",
        "class": "PerformanceEngineer",
        "priority": 2
      },
      "quality-engineer": {
        "triggers": ["test", "validate", "verify", "quality", "coverage"],
        "module": "SuperClaude.Agents.core.quality",
        "class": "QualityEngineer",
        "priority": 2
      },
      "security-engineer": {
        "triggers": ["security", "vulnerability", "secure", "auth", "permission"],
        "module": "SuperClaude.Agents.core.security",
        "class": "SecurityEngineer",
        "priority": 2
      },
      "system-architect": {
        "triggers": ["architect", "design system", "structure", "pattern", "architecture"],
        "module": "SuperClaude.Agents.core.architect",
        "class": "SystemArchitect",
        "priority": 2
      },
      "python-expert": {
        "triggers": ["python", "pip", "django", "flask", "pytest"],
        "module": "SuperClaude.Agents.core.python",
        "class": "PythonExpert",
        "priority": 3
      },
      "frontend-architect": {
        "triggers": ["react", "vue", "angular", "frontend", "ui component"],
        "module": "SuperClaude.Agents.core.frontend",
        "class": "FrontendArchitect",
        "priority": 3
      },
      "backend-architect": {
        "triggers": ["api", "database", "backend", "server", "microservice"],
        "module": "SuperClaude.Agents.core.backend",
        "class": "BackendArchitect",
        "priority": 3
      },
      "devops-architect": {
        "triggers": ["deploy", "ci/cd", "docker", "kubernetes", "infrastructure"],
        "module": "SuperClaude.Agents.core.devops",
        "class": "DevOpsArchitect",
        "priority": 3
      }
    },
    "modes": {
      "brainstorming": {
        "triggers": ["--brainstorm", "explore", "discuss", "figure out", "not sure"],
        "module": "SuperClaude.Modes.brainstorming",
        "activate": "activate_brainstorming_mode"
      },
      "task-management": {
        "triggers": ["--task-manage", "TodoWrite", "track progress", "manage tasks"],
        "module": "SuperClaude.Modes.task_management",
        "activate": "activate_task_management_mode"
      },
      "introspection": {
        "triggers": ["--introspect", "analyze reasoning", "reflect", "meta"],
        "module": "SuperClaude.Modes.introspection",
        "activate": "activate_introspection_mode"
      },
      "token-efficiency": {
        "triggers": ["--uc", "--ultracompressed", "save tokens", "compress"],
        "module": "SuperClaude.Modes.token_efficiency",
        "activate": "activate_token_efficiency_mode"
      }
    }
  },
  "thresholds": {
    "auto_load": 0.7,
    "min_confidence": 0.3,
    "fallback_confidence": 0.5,
    "high_priority": 0.8
  },
  "settings": {
    "cache_size": 10,
    "ttl_seconds": 3600,
    "preload_core": true,
    "enable_extended": true,
    "max_agent_chain": 3
  }
}