{
  "title": "Hallucination Guardrail Overview",
  "description": "Offline dashboard specification for hallucination guardrail telemetry.",
  "panels": [
    {
      "id": "plan_only_rate",
      "title": "Plan-Only Rate (Requires Evidence)",
      "metric": "commands.requires_evidence.plan_only",
      "type": "timeseries",
      "thresholds": {
        "warning": 0.05,
        "critical": 0.1
      },
      "group_by": ["command"]
    },
    {
      "id": "quality_scores",
      "title": "Quality Score Distribution",
      "metric": "commands.requires_evidence.quality_score",
      "type": "histogram",
      "group_by": ["command"],
      "annotations": [
        {
          "label": "Pass Threshold",
          "value_key": "threshold"
        }
      ]
    },
    {
      "id": "consensus_failures",
      "title": "Consensus Failures",
      "metric": "hallucination.guardrail",
      "type": "event_table",
      "filters": {
        "plan_only": true,
        "consensus_reached": false
      }
    }
  ]
}
